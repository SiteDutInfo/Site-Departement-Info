{% extends 'general.html.twig' %}

{% block head %}<script type="text/javascript" src="http://code.jquery.com/jquery-3.1.1.min.js"></script>{% endblock %}

{% block idBody %}creerOffre{% endblock %}

{% block contenu %}
    <section>
    {% if session.sessionEnt is defined %}
        <h2 class="center up">Soumettez-nous une offre de stage ou d'emploi</h2>
        <div id="formCreation">
            <form method="post">
                <p>
                    <label>Type d'offre</label><br>
                    <span id="typeAnnonce">
                        <span>
                            <input type="radio" name="typeAnnonce" value="stage" id="stage"/>
                            <label for="stage">Stage</label>
                        </span>
                        <span>
                            <input type="radio" name="typeAnnonce" value="job" id="job"/>
                            <label for="job">Emploi</label>
                        </span>
                    </span><br>

                    <label for="posteRecherche">Poste recherché</label>
                    <input type="text" name="posteRecherche" id="posteRecherche"/><br>

                    <label for="descPoste">Description du poste</label>
                    <textarea name="descPoste" id="descPoste" rows="10" cols="40"></textarea><br>

                    <label for="profil">Profil recherché</label>
                    <textarea name="profil" id="profil" rows="10" cols="40"></textarea><br>

                    <label class="dates" for="dateDebut">Début du stage / de l'emploi</label>
                    <input type="date" name="dateDebut" id="dateDebut"/><br>

                    <label class="dates" for="dateFin">Fin du stage / de l'emploi</label>
                    <input type="date" name="dateFin" id="dateFin"/>
                    <input name="idpost" type="hidden" value="{{ session.sessionEnt.id }}">

                    <p class="center">Après la confirmation, votre annonce sera traitée par les administrateurs et sera publiée d'ici peu.</p>
                    <input name="creerAnnonce" class="btn blanc up" type="submit" value="Valider"/>
                </p>
            </form>
        </div>
    {% else %}
        <h2 class="center up">Vous devez être connecté en tant qu'entreprise pour accéder au contenu de cette page</h2>
    {% endif %}
    </section>
{% endblock %}