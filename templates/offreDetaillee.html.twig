{% extends 'general.html.twig' %}

{% block idBody %}offreDetaillee{% endblock %}

{% block contenu %}
    <div>
        <div class="logoEntOffre">
            {% for ent in annonce.entreprise %}
                <img src="img/web.png" alt="Logo de l'entreprise {{ ent.nom }}">
                <h3 class="bleuF up">{{ ent.nom }}</h3>
            {% endfor %}
        </div>
        <div>
            <div id="donneesOffre">
                <h3 class="up">Poste recherché</h3>
                <p>
                    {{ annonce.posteRecherche }}
                </p>
                <h3 class="up">Description du poste</h3>
                <p>
                    {{ annonce.descPoste }}
                </p>
                <h3 class="up">Profil recherché</h3>
                <p>
                    {{ annonce.profilRecherche }}
                </p>
            </div>
            <div>
                {% for ent in annonce.entreprise %}
                    <p><a href="" class="bleuF">{{ ent.url }}</a></p>
                {% endfor %}
                {% for resp in listeResp %}
                    <p>Tel. <span class="bleuF">{{ resp.tel }}</span></p>
                    <p>Email <span class="bleuF">{{ resp.mail }}</span>
                {% endfor %}
            </div>
        </div>
    </div>
{% endblock %}